{
  "compileOnSave": true,
	"compilerOptions": {
    "jsx": "preserve",
		"target": "es2017",
    "lib": ["es2017", "es2018", "esnext", "DOM"],
    "moduleResolution": "node",
    "module": "CommonJS",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./bin",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "pretty": true
  },
  "include": [
    "./src/**/*", "public"
  ]
}